}

put {
  url: {{baseUrl}}/api/monitors/{{monitorId}}
  body: json
  auth: inherit
}

body:json {
  {
    "name": "{{$randomDomainWord}}",
    "type": "http",
    "interval": "500s",
    "target": "https://example.net",
    "properties": {},
    "enabled": false
  }
}

assert {
  res.status: eq 200
  res.body.id: eq {{monitorId}}
  res.body.name: isNotEmpty
}
